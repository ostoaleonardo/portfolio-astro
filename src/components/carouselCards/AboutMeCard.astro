---
import BorderCard from "../borderCard/BorderCard.astro";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<BorderCard size="medium">
  <div
    class="w-full h-full flex flex-col justify-end bg-slate-400 dark:bg-neutral-800 p-6"
  >
    <div class="flex flex-col">
      <div class="w-fit bg-neutral-800 dark:bg-neutral-100 px-2 py-1 mb-4">
        <h1
          class="text-neutral-100 dark:text-neutral-900 text-3xl md:text-5xl xl:text-4xl font-archivo-black uppercase"
        >
          {i18n.ABOUT_ME_CARD.TITLE}
        </h1>
      </div>
      <p
        class="text-neutral-700 dark:text-neutral-200 text-md md:text-lg xl:text-xl font-oswald"
      >
        {i18n.ABOUT_ME_CARD.DESCRIPTION}
      </p>
    </div>
  </div>
</BorderCard>
