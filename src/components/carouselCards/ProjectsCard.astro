---
import BorderCard from "../borderCard/BorderCard.astro";
import TitleCard from "../borderCard/TitleCard.astro";
import IconCard from "@/components/borderCard/IconCard.astro";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<BorderCard size="medium" titleTop={i18n.PROJECTS_CARD.TITLE}>
  <a
    href="/project/1"
    class="w-full h-full flex flex-col bg-slate-400 dark:bg-neutral-800 p-2 md:p-4 cursor-pointer"
  >
    <IconCard />
    <TitleCard text={i18n.PROJECTS_CARD.TITLE} />

    <div class="w-full h-full flex flex-col justify-end">
      <div class="w-fit flex items-center">
        <span
          class="relative text-xs text-slate-200 font-mono before:absolute before:inset-0 before:bg-white before:dark:bg-neutral-800 before:animate-typewriter after:absolute after:inset-0 after:dark:bg-green-500 after:w-0.5 after:animate-caret transition-all"
        >
          npm run dev
        </span>
      </div>
    </div>
  </a>
</BorderCard>
