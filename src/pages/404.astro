---
import Layout from "@/layouts/Layout.astro";

import { getI18N } from "@/components/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO.SEO_TITLE} description={i18n.SEO.SEO_DESCRIPTION}>
  <main class="w-screen h-screen flex justify-center items-center p-12">
    <div class="flex flex-col group uppercase gap-4">
      <span
        class="text-7xl md:text-9xl text-neutral-50 font-archivo-black group-hover:font-outline-2 flex-wrap leading-none transition-all"
      >
        Page not {" "}
        <span class="font-outline-2 group-hover:text-neutral-50"> found</span>
      </span>
      <a
        href="/"
        class="w-fit text-xl sm:text-2xl md:text-3xl xl:text-4xl hover:scale-125 bg-neutral-100 text-neutral-900 font-archivo-black transition-all p-1"
      >
        Go back
      </a>
    </div>
  </main>
</Layout>
